}

.tag-tag .section-2
{
  height: 204rpx;
}

.divider {
  height: 10rpx;
  box-shadow: inset 0 1rpx 2rpx #eee;
  width:100%
}


.tag-tag .section-2 .section-2-detail
{
  padding-left: 20px;
  color: #aaa;
}

.tag-tag .section-2 .section-2-detail .business
{
  line-height: 20rpx;
  font-size: 22rpx;
}

.tag-tag .section-2 .section-3
{
   position: absolute;
   width: 140rpx;
   height: 140rpx;
   right: 20rpx;
   bottom: 0px;
}

.tag-tag .section-2 .section-3 image
{
  width: 100%;
